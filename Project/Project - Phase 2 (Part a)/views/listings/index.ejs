<% layout('/layouts/boilerplate.ejs') -%>

    <body>
        <h3 class="mb-3">All Listings</h3>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4">
            <% for (let listing of allListings) { %>
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card col listing-card">
                        <img src="<%= listing.image %>" class="card-img-top" alt="listing_image" style="height: 18rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <h6 class="card-title mt-1 mb-1">
                                <%= listing.title %>
                            </h6>
                            <p class="card-text text-muted">
                                <%= listing.price.toLocaleString('en-US', { style: 'currency' , currency: 'USD', minimumFractionDigits: 0 }) %>/night
                            </p>
                        </div>
                    </div>
                </a>
            <% } %>
        </div>
    </body>